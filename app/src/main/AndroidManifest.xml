<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.travelguru">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/airplane1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/airplane1"
        android:supportsRtl="true"
        android:theme="@style/Theme.TravelGuru">
        <activity
            android:name=".DetailActivity"
            android:exported="false" />
        <activity
            android:name=".HotelsList"
            android:exported="false" />
        <activity
            android:name=".CityList"
            android:exported="false" />
        <activity
            android:name=".LoginActivity.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>